---
import { Image } from "astro:assets";
import HeroHeading from "@assets/images/projects/HeroHeading.svg";
import HeroGallery from "@components/HeroGallery.astro";

/**
 * Hero Section Component
 *
 * @description Main hero section displaying the festival logo and gallery video
 */
---

<section class="hero-section">
  <div class="hero-container">
    <Image
      src={HeroHeading}
      alt="Hopkins Creek Festival logo"
      loading="eager"
      quality="high"
      class="hero-heading"
    />
    <HeroGallery />
  </div>

  <style lang="scss">
    @use "../assets/scss/base/breakpoint" as *;

    .hero-section {
      // Use design system container pattern
      max-width: var(--grid-max-width);
      margin: 0 auto;
      width: 100%;
      padding-inline: var(--grid-gutter);
      padding-block: var(--space-xl);

      @include breakpoint("m") {
        padding-block: var(--space-2xl);
      }

      @include breakpoint("l") {
        padding-block: var(--space-3xl);
      }
    }

    .hero-container {
      // Layout using design system patterns
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-xl);

      @include breakpoint("l") {
        gap: var(--space-2xl);
      }
    }

    .hero-heading {
      // Constrain maximum width using design system
      width: 100%;
      max-width: 37.5rem; // 600px in rem
      height: auto;
      display: block;

      // Optimize SVG rendering
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;

      // Add subtle animation on load using design system timing
      animation: fadeInUp var(--animation-speed-medium) var(--cubic-bezier);
      animation-fill-mode: both;

      // Responsive sizing
      @include breakpoint("m") {
        max-width: 43.75rem; // 700px in rem
      }

      @include breakpoint("l") {
        max-width: 50rem; // 800px in rem
      }
    }

    // Animations using design system spacing
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(var(--space-m));
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    // Reduced motion support
    @media (prefers-reduced-motion: reduce) {
      .hero-heading {
        animation: none;
      }
    }

    // Print styles
    @media print {
      .hero-section {
        padding-block: var(--space-m);
      }

      .hero-container {
        gap: var(--space-m);
      }
    }
  </style>
</section>
