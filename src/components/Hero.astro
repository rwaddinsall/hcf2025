---


/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and image
 */



---

<section class="px-6 py-16">
  <div class="container">
    <div class="flex flex-col">
      <h1 class="w-full text-center">
        <slot>Hopkins Creek</slot>
      </h1>
      <p class="text-center">
        7th - 9th February 2025
      </p>
    </div>
  </div>
</section>

<style>
  h1 {
    /* use font demibold */
    font-family: "Milanesa DemiBold", var(--font-heading);
text-transform: uppercase;
    line-height: 1.2;
    font-size: 5rem;
    margin-bottom: 0.5rem;
  }
</style>
