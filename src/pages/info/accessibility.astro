---
import InfoPageLayout from '../../components/InfoPageLayout.astro';

const pageTitle = 'Accessibility';
const pageSubtitle =
  "Hopkins Creek is committed to creating an inclusive and accessible event for all attendees. We're currently working on making the festival experience safer, easier and more enjoyable for everyone.";
const metaDescription =
  'Learn about accessibility features and support available at Hopkins Creek Festival.';

const infoSections = [
  {
    title: 'Accessibility Information',
    content: [
      {
        type: 'paragraph',
        children: [
          {
            type: 'text',
            text: "If you have any accessibility needs, let us know in advance by using the accessibility field at checkout or by emailing us directly. We'll do our best to support you â€” and having this info early makes a huge difference.",
          },
        ],
      },
      {
        type: 'paragraph',
        children: [
          {
            type: 'text',
            text: "Things we're working to support:",
          },
        ],
      },
      {
        type: 'list',
        format: 'unordered',
        children: [
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Accessible parking close to entry',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Accessible camping (location, terrain, quiet zones)',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Stage and viewing accessibility',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Accessible toilets',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Charging stations for mobility devices',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Guide dog access',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Breastfeeding and rest areas',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Local accommodation recommendations',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Dietary needs and clear food labelling',
              },
            ],
          },
          {
            type: 'listItem',
            children: [
              {
                type: 'text',
                text: 'Large print or plain text versions of materials',
              },
            ],
          },
        ],
      },
      {
        type: 'paragraph',
        children: [
          {
            type: 'text',
            text: "A full accessibility map and contact info will be made available closer to the event. If you've got specific questions or needs before then, reach out: ",
          },
          {
            type: 'text',
            text: 'info@hopkins-creek.com',
            marks: [
              {
                type: 'link',
                attrs: { href: 'mailto:info@hopkins-creek.com' },
              },
            ],
          },
        ],
      },
    ],
    links: [
      {
        text: 'Contact Us About Accessibility',
        url: 'mailto:info@hopkins-creek.com',
      },
    ],
  },
];
---

<InfoPageLayout
  pageTitle={pageTitle}
  pageSubtitle={pageSubtitle}
  metaDescription={metaDescription}
  infoSections={infoSections}
>
  <div class="contact-info">
    <h3>Get in Touch</h3>
    <p>
      We're here to help make your festival experience as accessible and
      enjoyable as possible. Don't hesitate to reach out with any questions or
      specific requirements.
    </p>

    <div class="contact-details">
      <p>
        <strong>Email:</strong>
        <a href="mailto:info@hopkins-creek.com">info@hopkins-creek.com</a>
      </p>
      <p>
        <strong>Response Time:</strong> We aim to respond to accessibility enquiries
        within 48 hours.
      </p>
    </div>
  </div>
</InfoPageLayout>

<style lang="scss">
  .contact-info {
    margin-top: var(--space-xl);
    padding: var(--space-l);
    background: var(--background-color-subtle);
    border-radius: var(--radius-l);

    h3 {
      margin-bottom: var(--space-m);
      color: var(--color-primary);
    }

    p {
      margin-bottom: var(--space-s);
      line-height: var(--line-height-relaxed);
    }
  }

  .contact-details {
    margin-top: var(--space-m);
    padding-top: var(--space-m);
    border-top: 1px solid var(--border-color-subtle);

    a {
      color: var(--color-primary);
      text-decoration: underline;

      &:hover {
        color: var(--color-primary-dark);
      }
    }
  }
</style>
