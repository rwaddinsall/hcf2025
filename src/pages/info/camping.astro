---
import InfoPageLayout from '../../components/InfoPageLayout.astro';

// Fallback content if Strapi is unavailable
const fallbackSections = [
  {
    title: 'Camping Information',
    details: [
      {
        type: 'paragraph',
        children: [
          {
            text: 'Hopkins Creek Festival offers a variety of camping options to suit all preferences and budgets. From basic unpowered sites to luxury glamping, we have something for everyone.',
          },
        ],
      },
    ],
  },
  {
    title: 'Campsite Facilities',
    details: [
      {
        type: 'paragraph',
        children: [
          {
            text: 'Our campsites include modern amenities to ensure your comfort:',
          },
        ],
      },
      {
        type: 'list',
        children: [
          { children: [{ text: 'Clean toilet and shower blocks' }] },
          { children: [{ text: 'Drinking water stations' }] },
          { children: [{ text: 'Food preparation areas' }] },
          { children: [{ text: 'Fire pits (where permitted)' }] },
          { children: [{ text: '24/7 security patrol' }] },
        ],
      },
    ],
  },
];
---

<InfoPageLayout
  slug="camping"
  fallbackHeading="Camping & Accommodation"
  fallbackSubheading="Find the perfect place to stay during Hopkins Creek Festival"
  fallbackAccordion={fallbackSections}
/>
