---
import Logo from "./Logo.astro";
import ScrollingText from "./ScrollingText.astro";

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear();
---

<footer>
  <!-- Acknowledgement of Country - Prominent placement at top -->
  <section class="acknowledgement-section">
    <div class="container">
      <ScrollingText
        strapiType="acknowledgement-of-country"
        duration={30}
        ariaLabel="Acknowledgement of Country"
        width="100%"
        variant="acknowledgement-of-country"
      />
    </div>
  </section>

  <section class="py-20">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <div class="flex flex-col gap-4">
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home</a></li>
          <li><a href="/portfolio">Artists</a></li>
          <li><a href="/info">Info</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <ul class="flex flex-col gap-2">
          <li><a href="/info/camping">Camping & Accommodation</a></li>
          <li><a href="/info/tickets">Tickets</a></li>
          <li><a href="/info/travel">Travel & Entry</a></li>
          <li><a href="/info/accessibility">Accessibility</a></li>
          <li><a href="/info/sustainability">Sustainability</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <ul class="flex flex-col gap-2">
          <li><a href="/privacy-policy">Privacy Policy</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
      </div>
      <section class="py-8">
        <div
          class="container flex flex-col gap-4 md:flex-row md:justify-between"
        >
          <p>
            &copy; {currentYear} - Hopkins Creek Festival. All rights reserved.
          </p>
        </div>
      </section>
    </div>

    <style>
      .acknowledgement-section {
        padding: var(--space-l) 0;
        border-bottom: 1px solid var(--border-color-subtle);
      }

      section {
        border-top: 1px solid var(--border-color-subtle);
      }
    </style>
  </section>
</footer>
