---
import ScrollingText from './ScrollingText.astro';
import { getAllInfoPages, getAllGeneralPages } from '../utils/static-content';
// import { Icon } from 'astro-icon/components';

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */

// Get info pages for Information column from static content
const infoPages = getAllInfoPages();

// Get general pages for Legal column from static content
const generalPages = getAllGeneralPages();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid align-center">

      <div class="footer-column">
        <h3 class="footer-heading">Festival</h3>
        <ul class="footer-links">
          <li><a href="/" class="footer-link">Home</a></li>
          <li><a href="https://events.humanitix.com/hopkins-creek-2025" class="footer-link" target="_blank" rel="noopener noreferrer">Tickets</a></li>
          <!-- <li><a href="/" class="footer-link">Artists</a></li> -->
        </ul>
      </div>

      <div class="footer-column">
        <h3 class="footer-heading">Information</h3>
        <ul class="footer-links">
          {
            infoPages.map((page) => (
              <li>
                <a href={`/info/${page.slug}`} class="footer-link">{page.heading}</a>
              </li>
            ))
          }
          <li>
            <a href="/sustainability" class="footer-link">Sustainability</a>
          </li>
        </ul>
      </div>

      <!-- Column 3: Legal -->
      <div class="footer-column">
        <h3 class="footer-heading">Legal</h3>
        <ul class="footer-links">
          {
            generalPages.length > 0 ?
              generalPages.map((page) => (
                <li>
                  <a href={`/${page.slug}`} class="footer-link">{page.title}</a>
                </li>
              ))
            : (
              <>
                <li>
                  <a href="/privacy-policy" class="footer-link">Privacy Policy</a>
                </li>
                {/* <li>
                  <a href="/terms" class="footer-link">Terms & Conditions</a>
                </li> */}
              </>
            )
          }
        </ul>
      </div>
    </div>

    <!-- Acknowledgement of Country - Prominent placement -->
    <div class="footer-acknowledgement">
      <ScrollingText
        strapiType="acknowledgement-of-country"
        class="acknowledgement-text"
        duration={45}
        ariaLabel="Acknowledgement of Country"
        width="75%"
        variant="acknowledgement-of-country"
      />
    </div>
  </div>
</footer>

<style lang="scss">
  @use "../assets/scss/base/mixins" as *;

  .site-footer {
    background-color: var(--color-neutral-100);
    border-top: 0.5px solid var(--border-color-subtle);
    margin-top: auto;
    padding-top: var(--space-xl);  // Move padding from footer-main to here

    // DEBUG: Add border to visualize footer layout
    border: 2px dashed red;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    justify-content: center;
    align-items: start;

    @media (min-width: 768px) {
      grid-template-columns: repeat(2, minmax(200px, 300px)); // Fixed width columns
      justify-content: center;
    }

    @media (min-width: 1024px) {
      grid-template-columns: repeat(3, minmax(200px, 300px));
      gap: var(--space-2xl);
      justify-content: center;
    }

    // DEBUG: Add border to visualize grid layout
    border: 2px dashed blue;
  }

  .footer-column {
    // // DEBUG: Temporary border for layout visualization
    // border: 2px solid orange;

    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    align-items: flex-start; // Left-align all content

    // DEBUG: Add border to visualize column layout
    border: 2px dashed green;
  }

  .footer-heading {
    color: var(--foreground-color);
    font-family: var(--font-body);
    font-size: var(--font-size-0);
    font-weight: 600;
    margin: 0;
    line-height: 0.5;
    text-align: left; // Left-align heading
    width: 100%;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xs);
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: flex-start;
    width: 100%; // Fill the column width so list items align with heading center
    /* Removed fit-content and auto margins */
  }

  .footer-link {
    color: var(--foreground-color);
    font-family: var(--font-body);
    font-size: var(--font-size-0);
    transition: all var(--animation-speed-fast) var(--cubic-bezier);

    @include text-decoration(
      var(--border-color-subtle),
      var(--link-hover-color),
      1px,
      2px,
      3px,
      2px
    );

    &:hover,
    &:focus-visible {
      color: var(--link-hover-color);
      transform: translateX(2px);
    }

    &:focus-visible {
      @include outline;
    }
  }

  .footer-acknowledgement {
    // DEBUG: Add border to visualize acknowledgement section
    border: 2px dashed purple;

    margin-top: var(--space-m);

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .acknowledgement-text {
    font-size: var(--font-size-);
    font-weight: 600;
    text-align: center;
    color: var(--foreground-color);
  }

  @media (prefers-reduced-motion: reduce) {
    .footer-link {
      transition: none;

      &:hover,
      &:focus-visible {
        transform: none;
      }
    }
  }
</style>