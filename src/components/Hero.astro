---
import { Image } from 'astro:assets';
import HeroHeading from '@assets/images/projects/HeroHeading.svg';
import HeroGallery from '@components/HeroGallery.astro';

/**
 * Hero Section Component
 *
 * @description Main hero section displaying the festival logo and gallery video
 */
---

<section class="hero-section">
  <div class="hero-container">
    <Image
      src={HeroHeading}
      alt="Hopkins Creek Festival logo"
      loading="eager"
      quality="high"
      class="hero-heading"
    />
    <HeroGallery />
  </div>

  <style lang="scss">
    @use "../assets/scss/base/breakpoint" as *;

    .hero-section {
      // Simplified container pattern
      max-width: var(--grid-max-width);
      margin: 0 auto;
      width: 100%;
      
      // Reduced top padding to move hero up, maintain bottom padding for proper spacing
      padding-inline: var(--space-s);
      padding-block-start: var(--space-xs);
      padding-block-end: var(--space-l);

      @include breakpoint("xs") {
        padding-inline: var(--space-m);
        padding-block-start: var(--space-s);
        padding-block-end: var(--space-xl);
      }

      @include breakpoint("s") {
        padding-inline: var(--grid-gutter);
        padding-block-start: var(--space-m);
      }

      @include breakpoint("m") {
        padding-block-start: var(--space-l);
        padding-block-end: var(--space-2xl);
      }

      @include breakpoint("l") {
        padding-block-start: var(--space-xl);
        padding-block-end: var(--space-3xl);
      }
    }

    .hero-container {
      // Clean flexbox layout
      display: flex;
      flex-direction: column;
      align-items: center;
      
      // Consistent gap system - more balanced progression
      gap: var(--space-l);

      @include breakpoint("xs") {
        gap: var(--space-xl);
      }

      @include breakpoint("s") {
        gap: var(--space-2xl);
      }

      @include breakpoint("l") {
        gap: var(--space-2xl);
      }
    }

    .hero-heading {
      width: 100%;
      height: auto;
      display: block;
      
      // Match the gallery's container width and gutter for perfect alignment
      max-width: var(--container-max-width);
      margin: 0 auto;
      padding-inline: var(--container-gutter);
      padding-block: var(--space-m);
      padding-top: var(--space-l);
      
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
      animation: fadeInUp var(--animation-speed-medium) var(--cubic-bezier);
      animation-fill-mode: both;
    }

    // Animations using design system spacing
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(var(--space-m));
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    // Reduced motion support
    @media (prefers-reduced-motion: reduce) {
      .hero-heading {
        animation: none;
      }
    }

    // Print styles
    @media print {
      .hero-section {
        padding-block: var(--space-m);
      }

      .container hero-container {
        gap: var(--space-m);
      }
    }
  </style>
</section>
