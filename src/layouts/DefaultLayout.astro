---
import "../styles/tailwind.css";
import "../assets/scss/index.scss";
import SiteMeta from "../components/SiteMeta.astro";
import Footer from "../components/Footer.astro";
import Navigation from "@components/Navigation.astro";

const {
  title = "Hopkins Creek Festival",
  description = "Hopkins Creek Music Festival - A celebration of music, art, and community in the heart of nature. Join us for an unforgettable weekend of incredible artists and good vibes.",
  url = Astro.site,
  image = "social-preview-image.png",
  author = "Hopkins Creek Festival",
} = Astro.props;
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SiteMeta
      title={title}
      description={description.substring(0, 100)}
      url={url}
      image={image}
      author={author}
    />
  </head>
  <body>
    <Navigation />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
    <style lang="scss" is:global>
      // sticky footer on low content pages
      html,
      body {
      }

      body {
        display: flex;
        flex-direction: column;
        // Removed conflicting padding - let components handle their own spacing

        main {
          flex: 1 0 auto;
          max-width: var(--grid-max-width);
          margin: var(--space-l) auto 0; // Add top margin for spacing from nav
          // Removed conflicting padding-inline - components handle their own horizontal spacing
          // Removed vertical padding - components handle their own vertical spacing
        }

        footer {
          flex-shrink: 0;
          margin-top: var(
            --space-xl
          ); // Add top margin for separation from content
        }
      }

      pre {
        border: 2px solid var(--link-color);
        border-radius: 0.35rem;
        padding: 1rem;
      }
    </style>
  </body>
</html>
