---
import { Image } from 'astro:assets';
import HeroHeading from '@assets/images/projects/HeroHeading.svg';
// import HeroGallery from '@components/HeroGallery.astro';

/**
 * Hero Section Component
 *
 * @description Main hero section displaying the festival logo and gallery video
 */
---

<section class="hero-section">
  <div class="container hero-container">
    <Image
      src={HeroHeading}
      alt="Hopkins Creek Festival logo"
      loading="eager"
      quality="high"
      class="hero-heading"
    />
    <!-- <HeroGallery /> -->
  </div>

  <style lang="scss">
    @use "../assets/scss/base/breakpoint" as *;

    .hero-section {
      // Use design system container pattern
      max-width: var(--grid-max-width);
      margin: 0 auto;
      width: 100%;
      // Responsive padding - mobile first approach
      padding-inline: var(--space-s); // Minimum padding for very small screens
      padding-block: var(--space-l); // Reduced padding for small screens

      @include breakpoint("xs") {
        padding-inline: var(--space-m); // Slightly more padding on 320px+
        padding-block: var(--space-xl);
      }

      @include breakpoint("s") {
        padding-inline: var(--grid-gutter); // Use grid gutter on larger screens
      }

      @include breakpoint("m") {
        padding-block: var(--space-2xl);
      }

      @include breakpoint("l") {
        padding-block: var(--space-3xl);
      }
    }

    .container hero-container {
      // Layout using design system patterns
      display: flex;
      flex-direction: column;
      align-items: center;
      // Responsive gap - smaller on very small screens
      gap: var(--space-m);

      @include breakpoint("xs") {
        gap: var(--space-l); // 320px+ more gap
      }

      @include breakpoint("s") {
        gap: var(--space-xl); // 480px+ normal gap
      }

      @include breakpoint("l") {
        gap: var(--space-2xl); // 1024px+ maximum gap
      }
    }

    .hero-heading {
      width: 100%;
      height: auto;
      display: block;
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
      animation: fadeInUp var(--animation-speed-medium) var(--cubic-bezier);
      animation-fill-mode: both;
    }

    // Animations using design system spacing
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(var(--space-m));
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    // Reduced motion support
    @media (prefers-reduced-motion: reduce) {
      .hero-heading {
        animation: none;
      }
    }

    // Print styles
    @media print {
      .hero-section {
        padding-block: var(--space-m);
      }

      .container hero-container {
        gap: var(--space-m);
      }
    }
  </style>
</section>
