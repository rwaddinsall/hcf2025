# Environment Variables Template for Hopkins Creek Festival Client
# Copy this file to .env and fill in your actual values

# ================================
# STRAPI CMS CONFIGURATION
# ================================

# Strapi API Base URL (without trailing slash)
# For development: http://localhost:1337
# For production: https://your-strapi-instance.herokuapp.com or https://your-strapi.railway.app
PUBLIC_STRAPI_URL=https://your-strapi-cms-url.com

# ================================
# SITE CONFIGURATION
# ================================

# Your site URL (used by Astro for sitemap generation and canonical URLs)
# For development: http://localhost:4321
# For production: https://your-site.netlify.app
PUBLIC_SITE_URL=https://your-site.netlify.app

# ================================
# ANALYTICS & TRACKING (Optional)
# ================================

# Google Analytics Measurement ID
# Format: G-XXXXXXXXXX
PUBLIC_GA_MEASUREMENT_ID=

# Google Tag Manager Container ID
# Format: GTM-XXXXXXX
PUBLIC_GTM_CONTAINER_ID=

# ================================
# SOCIAL MEDIA & SEO (Optional)
# ================================

# Default social media image for og:image meta tags
PUBLIC_DEFAULT_OG_IMAGE=/images/hopkins-creek-festival-og.jpg

# Default site description for meta tags
PUBLIC_DEFAULT_DESCRIPTION="Hopkins Creek Music Festival - An unforgettable celebration of music, community, and nature."

# ================================
# THIRD-PARTY SERVICES (Optional)
# ================================

# Mailchimp API for newsletter signup
PUBLIC_MAILCHIMP_FORM_URL=

# Contact form endpoint (if using external service)
PUBLIC_CONTACT_FORM_ENDPOINT=

# ================================
# PERFORMANCE & FEATURES (Optional)
# ================================

# Enable service worker for offline functionality
PUBLIC_ENABLE_SW=false

# Enable image optimization
PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# ================================
# DEPLOYMENT CONFIGURATION
# ================================

# Build environment indicator
NODE_ENV=production

# Netlify context (automatically set by Netlify)
# CONTEXT=production
# DEPLOY_PRIME_URL=
# DEPLOY_URL=
