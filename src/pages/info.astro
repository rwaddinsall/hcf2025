---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import PageHeader from "../components/PageHeader.astro";
import Feature from "../components/Feature.astro";

// Demo data - replace with Strapi data when available
const pageTitle = "Festival Information";
const pageSubtitle = "Everything you need to know about Hopkins Creek Festival";
---

<DefaultLayout title={pageTitle}>
  <PageHeader title={pageTitle} subtitle={pageSubtitle} />

  <section class="my-12">
    <div class="container">
      <div class="info-grid">
        <Feature icon="lucide:tent" title="Camping & Accommodation">
          <p>
            <a href="/info/camping" class="feature-link"
              >Learn more about camping →</a
            >
          </p>
        </Feature>

        <Feature icon="mdi:bed" title="The Motor Inn">
          <p>
            <a href="/info/motor-inn" class="feature-link"
              >Explore Motor Inn packages →</a
            >
          </p>
        </Feature>

        <Feature icon="mdi:wheelchair-accessibility" title="Accessibility">
          <p>
            <a href="/info/accessibility" class="feature-link"
              >View accessibility info →</a
            >
          </p>
        </Feature>

        <Feature icon="mdi:ticket" title="Tickets & Pricing">
          <p>
            <a href="/info/tickets" class="feature-link"
              >View ticket options →</a
            >
          </p>
        </Feature>

        <Feature icon="mdi:car" title="Getting There">
          <p>
            <a href="/info/getting-there" class="feature-link"
              >Plan your journey →</a
            >
          </p>
        </Feature>

        <Feature icon="mdi:food" title="Food & Beverages">
          <p>
            <a href="/info/food-beverages" class="feature-link"
              >Explore food options →</a
            >
          </p>
        </Feature>
      </div>
    </div>
  </section>
</DefaultLayout>

<style lang="scss">
  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-l);
    margin-top: var(--space-xl);
    align-items: stretch;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
    }
  }

  // Target the Feature components to ensure consistent height
  :global(.info-grid > .feature) {
    display: flex;
    flex-direction: column;
    min-height: 200px;
  }

  // Ensure content fills the available space
  :global(.info-grid > .feature .content) {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  // Push links to bottom
  :global(.info-grid > .feature .content > p:last-child) {
    margin-top: auto;
  }

  :global(.feature-link) {
    display: inline-flex;
    align-items: center;
    margin-top: var(--space-s);
    color: var(--color-primary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: all var(--animation-speed-fast) var(--cubic-bezier);

    &:hover {
      color: var(--color-primary-dark);
      transform: translateX(4px);
    }

    &:focus {
      outline: 2px solid var(--color-primary);
      outline-offset: 2px;
    }
  }
</style>
