---
import { Icon } from 'astro-icon/components';

/**
 * Feature Component
 *
 * @description A component that displays a feature with an icon, title, and description
 */
interface Props {
  /**
   * The icon to display
   */
  icon: string;
  /**
   * The title to display
   */
  title: string;
}

const { icon = 'mdi:rocket', title = 'Title' }: Props = Astro.props;
---

<div class="feature">
  <div class="feature__icon">
    <Icon name={icon} />
  </div>
  <div class="feature__content">
    <h3 class="feature__title">{title}</h3>
    <div class="feature__description">
      <slot />
    </div>
  </div>
</div>

<style lang="scss">
  @use '../../assets/scss/base/mixins' as *;

  .feature {
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
    padding: var(--space-l);
    border-radius: var(--radius-l);
    border: 1px solid var(--border-color-subtle);
    background-color: var(--background-color);
    transition: all var(--animation-speed-fast) var(--cubic-bezier);

    &:hover {
      transform: translateY(-2px);
      box-shadow: var(--elevation-3);
    }

    &__icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 60px;
      height: 60px;
      border-radius: var(--radius-m);
      background: linear-gradient(
        135deg,
        var(--color-primary),
        var(--color-secondary)
      );
      color: var(--color-neutral-100);

      svg {
        width: 30px;
        height: 30px;
      }
    }

    &__content {
      flex: 1;
    }

    &__title {
      font-size: var(--font-size-xl);
      font-weight: var(--font-weight-bold);
      margin: 0 0 var(--space-s) 0;
      color: var(--foreground-color);
    }

    &__description {
      color: var(--foreground-color-muted);
      line-height: var(--line-height-relaxed);

      p {
        margin: 0 0 var(--space-s) 0;

        &:last-child {
          margin-bottom: 0;
        }
      }
    }
  }
</style>
