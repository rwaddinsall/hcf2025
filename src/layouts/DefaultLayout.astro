---
import "../styles/tailwind.css";
import "../assets/scss/index.scss";
import SiteMeta from "../components/SiteMeta.astro";
import Footer from "../components/Footer.astro";
import Navigation from "@components/Navigation.astro";
import { ClientRouter } from 'astro:transitions';

const {
  title = "Hopkins Creek Festival",
  description = "A celebration of music & mateship on Taungurung Country - Tickets on sale 7pm Thursday, 26 June. Welcome to Hopkins Creek Magnificent Seven.",
  url = Astro.site,
  image = "social-preview-image.png",
  author = "Hopkins Creek Festival",
} = Astro.props;
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SiteMeta
      title={title}
      description={description.substring(0, 100)}
      url={url}
      image={image}
      author={author}
    />

    <!-- Enable Astro View Transitions for all browsers -->
    <ClientRouter />
  </head>
  <body>
    <Navigation />
    <main id="main-content" transition:animate="fade">
      <slot />
    </main>
    <Footer />
    <style lang="scss" is:global>
      html,
      body {
        height: 100%;
      }

      body {
        display: flex;
        flex-direction: column;
        overflow-x: clip; // Prevent horizontal scroll
        max-width: 100vw; // Ensure body doesn't exceed viewport width
      }

      .accordion-content {
        overflow: hidden; // Prevent abrupt horizontal shifts
        transition: height 0.3s ease, padding 0.3s ease; // Smooth transitions
        max-width: 100%; // Ensure content stays within the container
        word-wrap: break-word; // Prevent long words from causing overflow
      }

      footer {
        flex-shrink: 0;
      }

      pre {
        border: 2px solid var(--link-color);
        border-radius: 0.35rem;
        padding: 1rem;
      }
    </style>
  </body>
</html>
